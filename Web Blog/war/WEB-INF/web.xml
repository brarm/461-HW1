<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>OfySign</servlet-name>
		<servlet-class>blog.OfyBlogServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>OfySign</servlet-name>
		<url-pattern>/ofysign</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>EmailSubscription</servlet-name>
	<servlet-class>blog.EmailSubscriptionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>EmailSubscription</servlet-name>
	<url-pattern>/subscribe</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>EmailCronJob</servlet-name>
	<servlet-class>blog.EmailCronJobServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	<servlet-name>EmailCronJob</servlet-name>
	<url-pattern>/cron/email</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>ofyblog.jsp</welcome-file>
	</welcome-file-list>
	
	<filter>
		<filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
	</filter-mapping>
	
</web-app>
